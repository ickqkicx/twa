<?xml version="1.0" encoding="utf-8"?>
<!--
https://logging.apache.org/log4net/release/config-examples.html
https://logging.apache.org/log4net/release/manual/configuration.html
-->
<log4net>
	<appender name="ConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping> <level value="INFO" /><foreColor value="White" /> </mapping>
		<mapping> <level value="WARN" /><foreColor value="Yellow" /> </mapping>
		<mapping> <level value="ERROR" /><foreColor value="Red" /> </mapping>
		<mapping> <level value="FATAL" /><foreColor value="White" /><backColor value="Red" /></mapping>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-5level %date{yyyy-MM-dd HH:mm:ss}:[%logger.%method]:[%file:%line]%newline%message%newline%exception" />
		</layout>
	</appender>

	<appender name="INFOFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="Logs/info-"/>
		<datePattern value="yyyyMMdd'.log'" />
		
		<appendToFile value="true" />
		<staticLogFileName value="false"/>
		<preserveLogFileNameExtension value="true" />
		<maximumFileSize value="1GB" />
		<maxSizeRollBackups value="-1" />
	
		<filter type="log4net.Filter.LevelMatchFilter">
			<levelToMatch value="INFO" />
		</filter>
		<filter type="log4net.Filter.DenyAllFilter" />
		
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{HH:mm:ss}:[%logger.%method]:[%file:%line]%newline%message%newline%exception" />
		</layout>
	</appender>

	<root>
		<level value="INFO"/>
		<appender-ref ref="ConsoleAppender" />
		<appender-ref ref="INFOFileAppender" />
	</root>
	
	<logger name="Microsoft">
		<level value="WARN" />
	</logger>
	<logger name="Microsoft.Hosting.Lifetime">
		<level value="INFO" />
	</logger>
</log4net>